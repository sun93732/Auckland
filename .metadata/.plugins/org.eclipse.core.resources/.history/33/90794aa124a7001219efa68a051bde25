package org.string;

public class TestString {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//int[] array= {49,38,65,97,76,13,27};
		int[] array= {1,2,3,4,5,6};
		TestString  t = new TestString();
		t.quickSort(array, 0, array.length -1);
       
	}
	public void quickSort(int[] array, int begin, int end )
	{
        if(end <0 || begin == end){
			return;
		}
	
		int r = partition(array,begin, end);
		if(r >0){
			quickSort(array, begin, r-1);
			quickSort(array, r+1, end);
		}
	}
	public int partition(int[] array, int begin, int end )
	{
		
		if(begin == end){
			
			System.out.println(array[begin]);
			return begin;
		}
			
		int pivot = array[begin];
		int i = begin;
		for(int j = i +1; j<= end;j++)
		{
			if(array[j] <= pivot){							
				i = i +1;
				chg(array, i, j);
				continue;
			}
			
		}
		chg(array,begin, i);
		System.out.print("the curret array is ");
		for(int loop =0; loop < array.length; loop ++){
			System.out.print(" "+ array[loop]);
		}
		System.out.print("\r\n begin = " + i);
		return i;
	}
	public void chg(int[] array, int i, int j)
	{
		int tmp = array[i];
		array[i] = array[j];
		array[j] = tmp;
	}

}
