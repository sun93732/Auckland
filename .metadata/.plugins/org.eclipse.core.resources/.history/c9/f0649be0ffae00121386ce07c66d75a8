package com.oracle;

public class HeapSort {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	//  新加入i结点  其父结点为(i - 1) / 2  
	void MinHeapFixup(int a[], int i)
	{
		int temp, k;
		temp = a[i];
		k =  (i-1)/2;
		while(k >=0 && i != 0)//结束条件很重要
		{
			if(a[k] <= temp)
			{
				break;
			}
			
			a[k] = a[i];
			i = k;
			k = (i-1)/2;
		}
		a[i] = temp;
	}


}
